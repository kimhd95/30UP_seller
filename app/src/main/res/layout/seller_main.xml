<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutManager="GridLayoutManager"
    app:spanCount="2"
    android:orientation="vertical"
    tools:context=".BarcodeScan">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#F8FFFC"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:context=".MainActivity">

            <TextView
                android:id="@+id/map"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:text="三"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                app:srcCompat="@drawable/logo1" />

            <TextView
                android:id="@+id/textView28"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="3" />

        </LinearLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_weight="0"
                android:background="@drawable/carrot"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="#BE1A1A1A"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="햇당근"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/divider2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="0"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="0"
                    android:background="#BE1A1A1A"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="국내산 햇 흙당근\n국내산100%\n당근3kg(중)"
                    android:textColor="#8BFFFFFF"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="#BE1A1A1A"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="1,500원"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="0"
                android:background="@drawable/sweatpotato"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView26"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="#BE1A1A1A"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="태국망고"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/divider3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="0"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_weight="0"
                    android:background="#BE1A1A1A"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="데니망고 필리핀망고\nM사이즈 5과\n1kg"
                    android:textColor="#8BFFFFFF"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="#BE1A1A1A"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="5,000원"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_weight="0"
                android:background="@drawable/mango"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView25"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="#BE1A1A1A"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="햇고구마"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/divider4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="0"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="96dp"
                    android:layout_weight="0"
                    android:background="#BE1A1A1A"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="미쁜스토어\n촉촉하고 달콤한 햇꿀밤고구마 출하!\n3kg(중)"
                    android:textColor="#8BFFFFFF"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="0"
                    android:background="#BE1A1A1A"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="5,500원"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="0"
                android:background="@drawable/eggs"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView24"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="#BE1A1A1A"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="달걀"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/divider5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="0"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="87dp"
                    android:layout_weight="0"
                    android:background="#BE1A1A1A"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="무항생제 건강한 유정란 (특) 6알"
                    android:textColor="#8BFFFFFF"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="#BE1A1A1A"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="2,500원"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="157dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_weight="0"
                android:background="@drawable/strawberry2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="#BE1A1A1A"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="익산딸기"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/divider6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="0"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_weight="0"
                    android:background="#BE1A1A1A"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="웰프레쉬 딸기\n1kg x 2개"
                    android:textColor="#8BFFFFFF"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_weight="0"
                    android:background="#BE1A1A1A"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="5,000원"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginLeft="50dp"
                android:layout_weight="0"
                android:background="@drawable/redone"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="#BE1A1A1A"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="감동란"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <View
                    android:id="@+id/divider7"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="0"
                    android:background="?android:attr/listDivider" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:layout_weight="0"
                    android:background="#BE1A1A1A"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="감동란 간이베어 있는 촉촉한 반숙계란\n50g, 30개"
                    android:textColor="#8BFFFFFF"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="0"
                    android:background="#BE1A1A1A"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:text="500원"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/btn_show_barcode_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:clickable="true"
            android:focusable="auto"
            app:backgroundTint="#699D77"
            tools:visibility="visible" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_item_card"
        android:layout_width="368dp"
        android:layout_height="624dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"

        />
</LinearLayout>