<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp"
    android:gravity="center">
    <RelativeLayout
        android:id="@+id/a_bus_info_lay"
        android:layout_width="180dp"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/item1_image"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/item1_timer_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@id/item1_image"
            android:layout_alignLeft="@id/item1_image"
            android:layout_alignRight="@id/item1_image"
            android:layout_alignTop="@id/item1_image"
            android:gravity="center_horizontal"

            android:paddingLeft="20dp"
            android:text="10분전"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/item1_stream_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@id/item1_image"
            android:layout_alignTop="@id/item1_image"
            android:layout_alignRight="@id/item1_image"
            android:layout_alignBottom="@id/item1_image"
            android:gravity="bottom|end"

            android:paddingLeft="20dp"
            android:text="★"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:typeface="sans" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/a_bus_info_lay2"
        android:layout_width="180dp"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/item2_image"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/item2_timer_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignBottom="@id/item2_image"
            android:layout_alignLeft="@id/item2_image"
            android:layout_alignRight="@id/item2_image"
            android:layout_alignTop="@id/item2_image"
            android:gravity="center_horizontal"

            android:paddingLeft="20dp"
            android:text="10분전"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/item2_stream_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@id/item2_image"
            android:layout_alignTop="@id/item2_image"
            android:layout_alignRight="@id/item2_image"
            android:layout_alignBottom="@id/item2_image"
            android:gravity="bottom|end"

            android:paddingLeft="20dp"
            android:text="★"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:typeface="sans" />

    </RelativeLayout>
</LinearLayout>