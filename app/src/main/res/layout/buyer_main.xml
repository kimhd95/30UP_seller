<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="#F8FFFC"
            android:baselineAligned="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="15dp"
                android:layout_height="37dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:text="三" />

            <ImageView
                android:id="@+id/intrologo"
                android:layout_width="73dp"
                android:layout_height="84dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:src="@drawable/logo1" />


            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="25dp"
                android:bufferType="spannable"
                android:capitalize="none"
                android:clickable="true"
                android:cursorVisible="false"
                android:text="익산시 동서로 380"
                android:textColor="#699D77" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="26dp"
                android:layout_height="21dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:adjustViewBounds="false"
                android:baseline="1dp"
                android:src="@android:drawable/ic_menu_search" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/market_type_txt"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="left"
                android:text="슈퍼마켓   >" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/market_type_item_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="30dp"
            android:scrollbars="vertical" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/market_type2"
                android:layout_width="320dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="편의점   >" />
            <!--<TextView-->
                <!--android:id="@+id/convine_whole_view_txt"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="right"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:text="더보기" />-->
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/market_type_item_recyclerview2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="30dp"
            android:scrollbars="horizontal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/slide_menu"
        android:orientation="vertical"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>
                //app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:text="사용자 이름"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/account_manage_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="계정관리"
                android:padding="10dp" />
            <Button
                android:id="@+id/stream_item_list_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="찜상품 목록"
                android:padding="10dp" />
            <Button
                android:id="@+id/shopping_basket_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="장바구니"
                android:padding="10dp" />
            <Button
                android:id="@+id/transaction_history_btn"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="거래 내역"
                android:padding="10dp" />
        </LinearLayout>

    </LinearLayout>
</android.support.v4.widget.DrawerLayout>
